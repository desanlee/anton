<div class="row ">
<h3 class="offset1">Update Testcase</h3>
<hr>
  <div class="span6 offset1 editpage">
    <%= form_for(@testcase) do |f| %>

      <%= f.label "testcase name:" %>
      <%= f.text_field :name %>
	  
	  <%= f.label "select a categery:" %>
      <%= f.select :casecate, @catelist %>
	  
	  <%= f.label "testcase will be executed in stage of:" %>
      <%= f.collection_select :casetype_id, @typelist, :id, :name %>
	  
	  <% if @testcase.casecate == "Operation" then %>
		<%= f.label "Execution will make what devie changed:" %>
		<%= f.collection_select :devicetype_id, @devicetypes, :id, :name %>
	  <% end %>

      <%= f.label "Execution steps:" %>
      <%= f.text_area :steps, class: "editpage" %>
	  
      <%= f.submit "Save", class: "btn btn-primary"  %>
    <% end %>
  </div>
</div>